extends CharacterBody3D
const Rot = 0.002
const Gr = -5
const speed = 100
const jumpspeed = 2
var vel = Vector3()

var rot_x = 0
var rot_y = 0

@export var Contain:Node
@onready var cam = $cam/Camera3D
@onready var anim = $AnimationPlayer


func _ready():
	Input.set_mouse_mode(Input.MOUSE_MODE_CAPTURED)

func _physics_process(delta):
	var dir = Vector3.ZERO
	var state = anim.current_animation
	var need = ''
	
	if Input.is_action_just_pressed("ui_cancel"):
		get_tree().quit()
	
	
	
	
	if Input.is_action_pressed("ui_left"):
		dir.x -= 1
	if Input.is_action_pressed("ui_right"):
		dir.x += 1
	if Input.is_action_pressed("ui_up"):
		dir.z -= 1
	if Input.is_action_pressed("ui_down"):
		dir.z += 1
	
		
	if dir:
		dir *= speed * delta
		need = "move"
		dir = dir.rotated(Vector3(0,1,0), rotation.y)
	else:
		need = 'idle'
	
	
	velocity.x = dir.x
	velocity.z = dir.z
	
	if Input.is_action_pressed("ui_select"):
		if is_on_floor():
			velocity.y = jumpspeed
	
	velocity.y += Gr * delta
	move_and_slide()


func _input(e):
	if e is InputEventMouseMotion:
		
		rot_y -= e.relative.x * Rot
		rot_x -= e.relative.y * Rot
		
		if rot_x < -1 : rot_x = -1
		elif rot_x > 1: rot_x = 1
	
		
		transform.basis = Basis(Vector3(0,1,0), rot_y)
		$cam.transform.basis = Basis(Vector3(1,0,0), rot_x)
